@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Services.Localization
@using Nop.Web.Framework.Themes
@using System.Web.Mvc

@model LogoModel
@using Nop.Web.Models.Common;

@{
	var currentThemeName = EngineContext.Current.Resolve<IThemeContext>().WorkingThemeName;
	var logoPath = "~/Themes/" + currentThemeName + "/Content/img/logo.png";
	var mobLogoPath = "../Themes/" + currentThemeName + "/Content/img/G-logo.png";
	var themeLogo = Html.Widget("element_theme_logo");
	var currentStore = EngineContext.Current.Resolve<IStoreContext>().CurrentStore;
}

<a href="@Url.RouteUrl("HomePage")" class="logo">
	@if (!MvcHtmlString.IsNullOrEmpty(themeLogo))
	{
		<!--@themeLogo-->
		string storeName = EngineContext.Current.Resolve<IStoreContext>().CurrentStore.GetLocalized(x => x.Name);
		<img title="" class="visible-lg hidden-xs" alt="@storeName" src="@Url.Content(logoPath)">
	}
	else
	{
		string storeName = EngineContext.Current.Resolve<IStoreContext>().CurrentStore.GetLocalized(x => x.Name);
		<img title="" class="visible-lg hidden-xs" alt="@storeName" src="@Url.Content(logoPath)">
	}
	<img title="Mobile Logo" class="hidden-lg visible-xs" alt="Logo" src="@mobLogoPath">
</a>