@{
	Layout = "~/Views/Shared/_ColumnsOne.cshtml";

	//page class
	Html.AppendPageCssClassParts("html-home-page");
}
<div class="page home-page">
	<div class="page-body">
		<div class="top-content-wrapper">
			@Html.Widget("home_page_top")
			<div class="gating text-center">
				<p class="con-para">Where do you live?</p>
				<h1 class="text-none m-t-xs">We will connect you to brands<br />that are <span class="text-red text-none">better for you.</span></h1>
				<div class="loc-search-wrapper">
					<i class="flaticon-gps dark"></i>
					<input type="text" class="gatingInput m-t-md m-b-md" placeholder="Enter your neighborhood" />
				</div>
				<span class="validloc" style="display:none"><img src="~/Themes/Element/Content/img/tick-green.png" alt="" valign="middle" /></span>
				<div class="box1 hidden1">
					<p class="text-upper">Time left for <span class="text-red">Next Day</span> Delivery:</p>
					<div class="timer text-none"><span><img src="~/Themes/Element/Content/img/timer-green.png" alt="" valign="middle" height="24" style="margin-top: -6px;" /> 3h 29m 55s</span></div>
				</div>
				<div class="box2 hidden">
					<p class="text-upper">Your delivery date will be:</p>
					<div class="m-t-xs">
						<div class="timer text-none"><span><img src="~/Themes/Element/Content/img/calender-green.png" alt="" valign="middle" height="24" style="margin-top: -6px;" /> 10/11/2017</span></div>
					</div>
				</div>
				<div class="box3 hidden">
					<p class="text-upper">We'll get in touch when we deliver to your area</p>
					<div class="m-t-xs">
						<span><img src="~/Themes/Element/Content/img/icon-email.png" alt="" valign="middle" /></span>
						<input type="text" class="getemail" placeholder="Your Email Address" style="width: 200px;margin:0 10px;">
						<button class="btnRd">Submit</button>
					</div>
				</div>
			</div>
		</div>
		<div class="gatingEmail">

		</div>
		<div class="caticons">
			<ul class="row">
				<li class="col-md-1"><a href="javascript:;"><i class="icon-fruitsveggies"></i><span>Fruits &<br> Vegetables</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-drinks"></i><span>Healthy<br>Drinks</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-bakery"></i><span>Artisan<br>Bakery</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-fishseafood"></i><span>Fish &<br> Seafood</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-kids"></i><span>Baby &<br> Child</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-dairyeggs"></i><span>Dairy &<br> Eggs</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-freefrom"></i><span>Free<br>From</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-readytocook"></i><span>Ready <br>to Eat</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-meatpoultry"></i><span>Meat &<br> Poultry</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-nutritionsuperfoods"></i><span>Nutrition &<br> Superfoods</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-gifts"></i><span>Gifts &<br> Vouchers</span></a></li>
				<li class="col-md-1"><a href="javascript:;"><i class="icon-beauty"></i><span>Natural<br>Beauty</span></a></li>
			</ul>
		</div>
		<div class="howitworks text-center m-t">
			<!--<h1 class="normal">How It Works?</h1>-->
			<div class="title" style="display: block;">
				<strong>How It Works?</strong>
			</div>
			<div class="row">
				<div class="col-md-12 tem-figures">
					<div class="row lay">
						<div class="col-md-4">
							<div class="stepitem">
								<div class="fig1"></div>
								<p>Shop our large selection of wholesome brands</p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="stepitem">
								<div class="fig2"></div>
								<p>We quality check and consolidate your order into one package</p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="stepitem lst-child">
								<div class="fig3"></div>
								<p>Next day delivery to your door on your time</p>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
		<div class="specialities p-lg">
			<!--@Html.Widget("home_page_before_categories")
			@Html.Action("HomepageCategories", "Catalog")-->
			<div class="title hidden-xs" style="display: block;">
				<strong>Specialities</strong>
			</div>
			<div class="row specs-wrapper">
				<div class="col-md-3"><div class="relimg specImg_01"><a href="#" class="specialityItem"><span>Paleo Friendly</span></a></div></div>
				<div class="col-md-3"><div class="relimg specImg_02"><a href="#" class="specialityItem"><span>Gluten Free</span></a></div></div>
				<div class="col-md-3"><div class="relimg specImg_03"><a href="#" class="specialityItem"><span>Organic</span></a></div></div>
				<div class="col-md-3"><div class="relimg specImg_04"><a href="#" class="specialityItem"><span>Vegetarian</span></a></div></div>
				<div class="col-md-12 p-sm hidden-xs"></div>
				<div class="col-md-3"><div class="relimg specImg_05"><a href="#" class="specialityItem"><span>RAW Foods</span></a></div></div>
				<div class="col-md-3"><div class="relimg specImg_06"><a href="#" class="specialityItem"><span>Vegan</span></a></div></div>
				<div class="col-md-3"><div class="relimg specImg_07"><a href="#" class="specialityItem"><span>Nut Free</span></a></div></div>
				<div class="col-md-3"><div class="relimg specImg_08"><a href="#" class="specialityItem"><span>Dairy Free</span></a></div></div>
			</div>
		</div>
		<div class="featured wbox m-t-lg hidden">
			@Html.Widget("home_page_before_products")
			@Html.Action("HomepageProducts", "Product")
		</div>
		<div class="bestsellers wbox m-t-lg hidden">
			@Html.Widget("home_page_before_best_sellers")
			@Html.Action("HomepageBestSellers", "Product")
		</div>
		<!--@Html.Action("TopicBlock", "Topic", new { systemName = "HomePageText" })-->
		@Html.Widget("home_page_before_categories")
		<!--@Html.Action("HomepageCategories", "Catalog")-->
		@Html.Widget("home_page_before_products")
		<!--@Html.Action("HomepageProducts", "Product")-->
		@Html.Widget("home_page_before_best_sellers")
		@Html.Action("HomepageBestSellers", "Product")
		<div class="home-page-banners">
			@Html.Widget("home_page_banners")
		</div>
		@Html.Widget("home_page_bottom")
	</div>
</div>
